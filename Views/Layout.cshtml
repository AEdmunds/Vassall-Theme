}


        <div id="wrap">
            <!-- THE LINE AT THE VERY TOP OF THE PAGE -->
            <div class="top_line"></div>
            <!-- HEADER AREA -->
            <header>
                <div class="container">
                    <div class="row">
                        <!-- HEADER: LOGO AREA -->
                        <div class="span3 logo">
                            @if (Model.Header != null) {
                                @Zone(Model.Header)
                            }
                        </div>
                        <div class="span9">
                            <div class="row-fluid">
                                <div class="span8 site-title">
                                    <h1>
                                        The Vassall Centre
                                    </h1>
                                    <p>
                                        Bristol's premier barrier-free workspace and conference centre
                                    </p>
                                </div>
                                <div class="span4">
                                    <!-- HEADER: PHONE NUMBER -->
                                    <p class="head_phone">
                                        <a href="tel:0117-965-9630">0117 965 9630</a>
                                    </p>
                                    <p class="head_email">
                                        <a href="mailto:vassall@vcconferences.co.uk">vassall@vcconferences.co.uk</a>
                                    </p>
                                </div>
                                <!-- HEADER: SOCIAL ICONS -->
                                @*  <ul class="socials unstyled">
                                        <li id="linked-in-follow">
                                            <script src="//platform.linkedin.com/in.js" type="text/javascript"></script>
                                            <script type="IN/FollowCompany" data-id="3333263" data-counter="none"></script>
                                        </li>
                                   <li><a class="twitter" href="#"></a></li>
                                <li><a class="facebook" href="#"></a></li>
                                <li><a class="linkedin" href="#"></a></li>
                                <li><a class="google_plus" href="#"></a></li>
                                </ul>*@
                            </div>
                            <div class="row-fluid">
                                <div class="access span12">
                                    <div class="row-fluid">
                                        <div class="text-size offset8 span2">
                                            @using (Html.BeginForm("SetTextSize", "Accessability", FormMethod.Post, new { id="set-text-size-form"})) {
                                                <input id="text" name="submitButton" type="submit" value="text" class="btn btn-mini text-size" /> 
                                                <input id="decrease-text" name="submitButton" type="submit" value="-" class="btn btn-mini text-size"/> 
                                                <input id="increase-text" name="submitButton" type="submit" value="+" class="btn btn-mini text-size"/>     
                                            }
                                        
                                        </div>
                                        <div class="contrast span2">
                                            @using (Html.BeginForm("CycleContrast", "Accessability", FormMethod.Post, new {id = "cycle-contrast-form"})) {
                                                <input id="contrast" name="submitButton" type="submit" value="Contrast" class="btn btn-mini"/>
                                                <input id="cycle-contrast" name="submitButton" type="submit" value=" " class="btn btn-mini btn-cycle"/>
                                                <input id="contrast-link" type="hidden" value="@Url.Content(@"~/accessibility/web-site")"/>
                                                
                                            }
                                                
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    
                    </div>
                </div>
                <!-- HEADER: PRIMARY SITE NAVIGATION -->
                <div class="container">
                    @if (Model.Navigation != null) {
                        @Zone(Model.Navigation)                      
                    }
                </div>
            </header>
        
            <div class="main-content">
                <div class="container">
                
                    @if (Model.BeforeMain != null) {
                        <div id="layout-before-main" class="group">
                            @Zone(Model.BeforeMain)
                        </div>
                    }
       
                
                    @if (Model.Messages != null) {
                    
                        @Zone(Model.Messages)  
                    
                        
                       
                    
                    }
                    
                
                    @if (Model.Featured != null)
                    {
                        <div class="row show-grid clear-both">
                            <div class="span12 main-column one-column">
                                @Zone(Model.Featured)
                            </div>
                        </div>
                    }
                       
                    <div class="row show-grid clear-both">
                    
                        @if ((Model.AsideFirst != null) && (Model.AsideSecond != null))
                        {
                            <div id="left-sidebar" class="span3 sidebar">
                                @Zone(Model.AsideFirst)
                            </div>
                            <div class="span6 main-column three-columns-central">
                                @Zone(Model.Content)
                            </div>
                            <div id="right-sidebar" class="span3 sidebar">
                                @Zone(Model.AsideSecond)
                            </div>
                
                        }
                        else if (Model.AsideSecond != null){
                
                       
                            <div class="span9 main-column two-columns-right">
                                @Zone(Model.Content)
                            </div>
                            <div id="right-sidebar" class="span3 sidebar">
                                @Zone(Model.AsideSecond)
                            </div>
                        }
                        else if (Model.AsideFirst != null)
                        {
                            <div id="left-sidebar" class="span3 sidebar">
                                @Zone(Model.AsideFirst)
                            </div>
                            <div class="span9 main-column two-columns-left">
                                @Zone(Model.Content)
                            </div>
                        
                        }
                        else {
                            <div class="span12 main-column one-column">
                                @Zone(Model.Content)    
                            </div>
                        }
                    </div>
                
                    @if (Model.AfterMain != null) {
                        <div id="layout-after-main" class="group">
                            @Zone(Model.AfterMain)
                        </div>
                    }
        
                

                </div>
            </div>
            <div id="push"></div>
        </div>

